<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES"
        tools:ignore="QueryAllPackagesPermission" />

    <application
        android:name=".App"
        android:label="@string/app_name"
        android:icon="@android:drawable/ic_menu_manage"
        android:theme="@style/Theme.AutoExpand">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".AppListActivity"
            android:exported="false" />

        <provider
            android:name=".PrefsProvider"
            android:authorities="com.autoexpand.xposed.prefs"
            android:exported="true" />

        <!-- Xposed module marker -->
        <meta-data
            android:name="xposedmodule"
            android:value="true" />

        <!-- Module description -->
        <meta-data
            android:name="xposeddescription"
            android:value="Auto-expand all notifications in the notification shade" />

        <!-- Minimum Xposed API version -->
        <meta-data
            android:name="xposedminversion"
            android:value="82" />

        <!-- LSPosed scope -->
        <meta-data
            android:name="xposedscope"
            android:resource="@array/xposed_scope" />
    </application>

</manifest>
